<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:alignment="top"
    ohos:padding="10vp"
    ohos:background_element="#EFEFEF">
    <xwg.stopwatch.AnalogStopWatch
        ohos:id="$+id:analog_stop_watch"
        ohos:height="match_parent"
        ohos:width="0"
        ohos:weight="20"
        ohos:background_element="$graphic:background_stopwatch"
        ohos:padding="2vp"
        />
    <Component
        ohos:height="match_parent"
        ohos:width="0"
        ohos:weight="1"
        />
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="0"
        ohos:weight="20"
        ohos:orientation="vertical"
        ohos:alignment="center">
        <Text
            ohos:id="$+id:lap_times"
            ohos:width="match_parent"
            ohos:height="0"
            ohos:weight="1"
            ohos:background_element="$graphic:background_laptime"
            ohos:text_alignment="horizontal_center"
            ohos:text_size="25fp"
            ohos:text_color="#000000"
            ohos:multiple_lines="true"
            ohos:scrollable="true"
            />
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="center"
            ohos:top_margin="15vp">
            <Button
                ohos:id="$+id:reset_lap"
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="5"
                ohos:text_size="27fp"
                ohos:text="$string:Reset"
                ohos:background_element="$graphic:background_button"
                />
            <Component
                ohos:height="match_parent"
                ohos:width="0"
                ohos:weight="1"/>
            <Button
                ohos:id="$+id:start_stop"
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="5"
                ohos:text_size="27fp"
                ohos:text="$string:Start"
                ohos:background_element="$graphic:background_button"
                />
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>

